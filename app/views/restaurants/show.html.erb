<h1>
  <%= @restaurant.name %>
</h1>
<h3>
  Category:
  <%= @restaurant.category %>
</h3>
<p>
  Address:
  <%= @restaurant.address %>
</p>
<p>
  <%= @restaurant.phone_number %>
</p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review|  %>
    <li class="list-group-item">
      <%= review.content %> ( <%= review.rating %> / 5 )
    </li>
  <% end %>
</ul>

<br>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<br>
<%= link_to "Back to all restaurants", restaurants_path %>

